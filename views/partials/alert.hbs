{{#if success}}
<div class="alert alert-success">
    {{success}}
</div>
{{/if}}
{{#if error}}
    <div class="alert alert-error">
        {{error}}
    </div>
    {{/if}}
<script>
window.setTimeout(function() {
$(".alert").fadeTo(500, 0).slideUp(500, function(){
$(this).remove();
});
}, 4000);
</script>