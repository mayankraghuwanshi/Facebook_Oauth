{{>alert}}
{{# if post}}
    <script src="https://cdn.ckeditor.com/4.11.0/standard/ckeditor.js"></script>
    <div class="container">
        <div class="row">
<div class="col-lg-12">
    <h1 class="mt-4">{{post.title}}</h1>
    <p class="lead">
        by
        <a href="#">{{post.user.firstname}}</a>
    </p>

    <hr>

    <p>Posted on {{post.date}}</p>
{{# if post.photo}}
    <hr>
    <img class="img-fluid rounded" src="{{post.photo}}" alt="">
    <hr>
{{/if}}
    <!-- Post Content -->
    <p class="lead">{{{post.content}}}</p>
    <!-- Comments Form -->
    <div class="card my-4 col-md-8">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
            <form action="/post/add_c{{post._id}}" method="post">
                <div class="form-group">
                    <textarea name="comment" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <script>
        CKEDITOR.replace( 'comment' );

    </script>


    <!-- Single Comment -->
    {{# if post.comments}}
        {{# each post.comments}}
    <div class="media mb-4 col-md-8">
        <img class="d-flex mr-3 rounded-circle" src="https://i0.wp.com/www.winhelponline.com/blog/wp-content/uploads/2017/12/user.png?fit=256%2C256&quality=100&ssl=1"
             style="height: 40px;">
        <div class="media-body">
            <a href="{{this.commenter_id}}" style=" text-decoration: none;"><h5 class="mt-0">{{this.commenter}}</h5></a>
           {{{this.comment}}}
        </div>
    </div>
            {{/each}}
        {{/if}}
</div>
        </div></div>
{{/ if}}