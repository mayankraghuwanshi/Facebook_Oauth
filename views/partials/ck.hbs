{{# if user}}
    <div class="card my-4">
        <h5 class="card-header" align="center">{{user.firstname}} how's you feeling today</h5>
        <div class="card-body">
            <form action="/post/putp" method="post">
                <div class="form-group">
                    <textarea name="title" class="form-control" rows="1"
                    placeholder="TITLE"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control" rows="3"
                    placeholder="CONTENT"></textarea>
                </div>
                <button type="submit" class="btn btn-primary"
                style="height: 30px; float: right; font-size: 12px">Post</button>
            </form>
        </div>
    </div>
{{/if}}
